generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String              @id @default(uuid())
  email            String              @unique
  role             String              @default("USER")

  // Financial Controls (Bankruptcy Prevention)
  credits          Int                 @default(50)        // Pre-paid scan credits
  tier             String              @default("FREE")    // FREE, PRO, ENTERPRISE
  totalSpent       Float               @default(0.0)       // Lifetime cost tracking (USD)
  monthlySpent     Float               @default(0.0)       // Current month spending (USD)
  monthlyResetDate DateTime            @default(now())     // Reset monthly counter

  targets          Target[]
  transactions     CreditTransaction[] // Audit trail
  createdAt        DateTime            @default(now())
  updatedAt        DateTime            @updatedAt
}

model Target {
  id                String   @id @default(uuid())
  type              String   // URL, IP, API
  value             String
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  scans             Scan[]

  // DNS Verification Fields
  verificationToken String   @default(cuid())
  isVerified        Boolean  @default(false)
  verifiedAt        DateTime?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Scan {
  id              String          @id @default(uuid())
  targetId        String
  target          Target          @relation(fields: [targetId], references: [id])
  status          String          @default("QUEUED") // QUEUED, RUNNING, COMPLETED, FAILED
  startedAt       DateTime?
  endedAt         DateTime?
  vulnerabilities Vulnerability[]
  logs            AgentLog[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
}

model Vulnerability {
  id          String   @id @default(uuid())
  scanId      String
  scan        Scan     @relation(fields: [scanId], references: [id])
  title       String
  severity    String   // LOW, MEDIUM, HIGH, CRITICAL
  status      String   @default("SUSPECTED") // SUSPECTED, CONFIRMED, FALSE_POSITIVE
  description String
  remediation String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AgentLog {
  id        String   @id @default(uuid())
  scanId    String
  scan      Scan     @relation(fields: [scanId], references: [id])
  message   String
  timestamp DateTime @default(now())
}

model CreditTransaction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Int      // -10 for scan deduction, +50 for purchase, +10 for refund
  type      String   // "SCAN_START", "SCAN_REFUND_ERROR", "SCAN_REFUND_CANCELLED", "PURCHASE", "ADMIN_ADJUSTMENT"
  scanId    String?  // Link to scan if applicable
  reason    String?  // Optional explanation for refunds/adjustments
  createdAt DateTime @default(now())

  @@index([userId, createdAt]) // For transaction history queries
}
